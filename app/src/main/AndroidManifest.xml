<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.HiltApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Foreignlanguagelearningapp"
        tools:targetApi="31">
        <activity
            android:name=".controller.FillWordActivity"
            android:exported="false" />
        <activity
            android:name=".controller.QuizzActivity"
            android:exported="false" />
        <activity
            android:name=".controller.MainActivity"
            android:exported="false" />
        <activity
            android:name=".controller.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Foreignlanguagelearningapp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".controller.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".controller.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".controller.FlipCardActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>